<%= tailwind_form_with(model: [:a, @caller], local: true) do |form| %>
  <%= form.section do %>
    <%= form.hidden_field :person_id, value: @caller.person.id %>
    <%= form.collection_select :pod_id, Pod.all, :id, :name, label: "Pod", width: :third %>
    <%= form.text_area :experience, with: :full %>
    <%= form.check_box :active, true, label: "Active", width: :third %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel @redirect_on_cancel %>
    <%= form.submit %>
  <% end %>
<% end %>

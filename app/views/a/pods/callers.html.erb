<% content_for :breadcrumbs do %>
  <%= breadcrumbs do |list| %>
    <% list.link "Pods", a_pods_path %>
    <% list.link "Pod #{@pod.name}", a_pod_path(@pod) %>
  <% end %>
<% end %>
<% content_for :page_head do %>
  <%= render PodHeadComponent.new(pod: @pod) %>
<% end %>
<% if @callers.length > 0 %>
  <%= table @callers.sort_by { |c| c.name }, row_url: ->(c) { a_person_path(c.person) } do |tbl| %>
    <% tbl.col "Caller" do |caller| %>
      <%= caller.name %>
      <% if !caller.active %>
        <span class="italic text-red-500">(not active)</div>
      <% end %>
    <% end %>
    <% tbl.col "Active match(es)" do |caller| %>
      <% if caller.active_matches.present? %>
        <% caller.active_matches.each_with_index do |match, index| %>
          <%= match.callee.name %><% if caller.active_matches.count - 1 != index %>, <% end %>
        <% end %>
      <% else %>
        <div class="italic">No active matches</div>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <div class="flex justify-center text-gray-600">
    Add some callers to this pod!
  </div>
<% end %>

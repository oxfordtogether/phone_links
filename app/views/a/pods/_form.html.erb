<%= tailwind_form_with(model: [:a, @pod], local: true) do |form| %>
  <%= form.section do %>
    <%= form.text_field :name, width: :third, required_asterix: true %>
    <%= form.text_field :theme, width: :third %>
    <%= form.collection_select :pod_leader_id, PodLeader.all.filter { |p| p.pod.nil? || p.pod.id == @pod.id }.sort_by(&:name), :id, :name, label: "Pod Leader", width: :third, info_message: "Dropdown includes pod leaders not already leading a pod." %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel action == :new ? a_pods_path : matches_a_pod_path(@pod) %>
    <%= form.submit %>
  <% end %>
<% end %>

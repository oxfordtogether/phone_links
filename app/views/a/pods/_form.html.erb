<%= tailwind_form_with(model: [:a, @pod], local: true) do |form| %>
  <%= form.section do %>
    <%= form.text_field :name, width: :third, required_asterix: true %>
    <%= form.text_field :theme, width: :two_thirds %>
    <%= form.collection_select :pod_leader_id, PodLeader.where(status: 'active').sort_by(&:name), :id, :name, label: "Pod Leader", width: :half %>
    <%= form.collection_select :safeguarding_lead_id, @safeguarding_leads.sort_by(&:name), :id, :name, label: "Safeguarding lead", width: :half, info_message: "This person will receive emails about concerns submitted via the safeguarding form. NOT CURRENTLY IN USE.", required_asterix: true %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel action == :new ? a_pods_path : matches_a_pod_path(@pod) %>
    <%= form.submit %>
  <% end %>
<% end %>

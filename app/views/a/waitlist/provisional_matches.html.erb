<% content_for :breadcrumbs do %>
  <%= breadcrumbs do |list| %>
    <% list.link "Waiting List", a_waitlist_path %>
    <% list.link "Provisional Matches", a_waitlist_provisional_matches_path %>
  <% end %>
<% end %>
<% content_for :page_head do %>
  <%= render(WaitlistHeadComponent.new(waiting_callers_count: @waiting_callers_count, waiting_callees_count: @waiting_callees_count, pending_matches_count: @pending_matches_count)) %>
<% end %>
<div class="flex justify-end pb-3">
  <%= button_link_to "New Match", "#{new_a_match_path}?redirect_on_cancel=#{a_waitlist_provisional_matches_path}" %>
</div>
<% if @pending_matches.length > 0 %>
  <%= table @pending_matches.sort_by { |m| m.caller.name }, row_url: ->(m) { a_match_path(m) } do |tbl| %>
    <% tbl.col "Pod" do |match| %>
      <% if match&.pod %>
        <%= match&.pod.name %>
        <% if false %>
          <% if match&.pod.pod_leader %>
            (<%= match&.pod&.pod_leader&.name %>)
          <% end %>
        <% end %>
      <% else %>
        <div class="italic">Not assigned to a pod</div>
      <% end %>
    <% end %>
    <% tbl.col "Caller" do |match| %>
      <%= match.caller.name %>
    <% end %>
    <% tbl.col "Callee" do |match| %>
      <%= match.callee.name %>
    <% end %>
    <% if false %>
      <% tbl.col "Caller - Callee" do |match| %>
        <%= match.caller.name %> - <%= match.callee.name %>
      <% end %>
    <% end %>
    <% tbl.col "Last updated", classes: "text-right" do |match| %>
      <%= format_date_as_relative(match.updated_at) == "today" ? format_date_as_relative(match.updated_at) : format_date_as_relative(match.updated_at) + " ago" %>
    <% end %>
    <% tbl.col "", classes: "flex justify-end" do |match| %>
      <% if match.pod_mismatch.present? %>
        <%= icon('exclamation', class: "h-5 w-5 text-yellow-400") %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <div class="flex justify-center text-gray-600">
    No provisional Matches
  </div>
<% end %>

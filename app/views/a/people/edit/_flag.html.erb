<%= tailwind_form_with(
        model: [:a, @person],
        url: a_person_path(@person, params: { page: :flag }),
        local: true) do |form| %>
  <%= form.section do %>
    <%= form.check_box :flag_in_progress, true, "Star" %>
    <%= form.text_area :flag_change_notes, label: "Notes" %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel a_person_path(@person) %>
    <%= form.submit %>
  <% end %>
<% end %>

<% content_for :breadcrumbs do %>
  <%= breadcrumbs do |list| %>
    <% list.link "People", a_search_path %>
    <% list.link @person.name, a_person_path(@person) %>
  <% end %>
<% end %>
<% content_for :page_head do %>
  <%= render partial: "show_page_head" %>
<% end %>
<div class="grid grid-cols-4">
  <div>
    <%= render partial: "a/people/edit/menu" %>
  </div>
  <div class="col-span-3 col-start-2">
    <%= tailwind_form_with(
        model: [:a, @person],
        url: save_pod_membership_a_edit_person_path(@person),
        method: :post,
        local: true) do |form| %>
      <%= form.section do %>
        <% if @person.callee.present? %>
          <%= form.fields_for :callee do |callee_fields| %>
            <%= callee_fields.collection_select :pod_id, Pod.all, :id, :name, label: "Pod", width: :full %>
          <% end %>
        <% end %>
        <% if @person.caller.present? %>
          <%= form.fields_for :caller do |caller_fields| %>
            <%= caller_fields.collection_select :pod_id, Pod.all, :id, :name, label: "Pod", width: :full %>
          <% end %>
        <% end %>
      <% end %>
      <%= form.button_section do %>
        <%= form.cancel a_person_path(@person) %>
        <%= form.submit %>
      <% end %>
    <% end %>
  </div>
</div>

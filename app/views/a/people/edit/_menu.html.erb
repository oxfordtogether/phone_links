<div class="mr-8">
  <%= side_nav do |nav| %>
    <% nav.link "Personal", edit_a_person_path(@person, :personal_details), "user" %>
    <% nav.link "Contact", edit_a_person_path(@person, :contact_details), "book-open" %>
    <% nav.link "Star", edit_a_person_path(@person, :flag), "star-fill" %>
    <% if @person.callee %>
      <% nav.link "Referral details", edit_a_person_path(@person, :referral_details), "heroicon-document-text-small" %>
      <% nav.link "Emergency contacts", edit_a_person_path(@person, :emergency_contacts), "people-fill" %>
    <% end %>
    <% if @person.caller %>
      <% nav.link "Caller information", edit_a_person_path(@person, :experience), "heroicon-document-text-small" %>
    <% end %>
    <% if @person.caller || @person.callee %>
      <% nav.link "Pod membership", edit_a_person_path(@person, :pod_membership), "phone" %>
    <% end %>
    <% if @person.callee %>
      <% nav.link "Status", status_a_edit_callee_path(@person.callee), "check-circle" %>
    <% end %>
    <% if @person.caller %>
      <% nav.link "Caller status", status_a_edit_caller_path(@person.caller), "check-circle" %>
    <% end %>
    <% if @person.admin %>
      <% nav.link "Admin status", status_a_edit_admin_path(@person.admin), "check-circle" %>
    <% end %>
    <% if @person.pod_leader %>
      <% nav.link "Pod leader status", status_a_edit_pod_leader_path(@person.pod_leader), "check-circle" %>
    <% end %>
  <% end %>
</div>

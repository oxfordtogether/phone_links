<div class="sm:flex sm:justify-between">
  <h1 class="text-2xl font-semibold text-gray-900">
    Referrals
  </h1>
  <div class="mt-4 sm:mt-0">
    <%= button_link_to "External referral form", new_referral_path, icon: 'icon-add' %>
  </div>
</div>
<% if referrals_paused? %>
  <div class="mt-6">
    <%= alert(title: "Referrals are paused", info: "New referrals can not be submitted.") %>
  </div>
<% end %>
<%= nav_tabs do |nav| %>
  <% nav.link "Referrals", a_referrals_path %>
<% end %>

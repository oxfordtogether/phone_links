<% content_for :breadcrumbs do %>
  <%= breadcrumbs do |list| %>
    <% list.link "Pod leaders", a_admin_pod_leaders_path %>
  <% end %>
<% end %>
<% content_for :page_head do %>
  <%= render AdminHeadComponent.new %>
<% end %>
<div class="flex justify-end pb-3">
  <%= button_link_to "New Pod Leader", "#{new_a_person_path}?role=pod_leader&redirect_on_cancel=#{a_admin_pod_leaders_path}" %>
</div>
<% if @pod_leaders.length > 0 %>
  <%= table @pod_leaders.sort_by(&:name), row_url: nil do |tbl| %>
    <% tbl.col "Name" do |pod_leader| %>
      <%= link_to pod_leader.name, a_person_path(pod_leader.person) %>
    <% end %>
    <% tbl.col "Active" do |pod_leader| %>
      <% if pod_leader.active %>
        <%= icon("check-circle", class: "h-5 w-5 text-green-500") %>
      <% else %>
        <%= icon("cross", class: "h-5 w-5 text-red-500") %>
      <% end %>
    <% end %>
    <!-- TO DO: Move icon into file -->
    <% tbl.col "Login as" do |pod_leader| %>
      <%= link_to "/a/sudo_login/person/#{pod_leader.person.id}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z"/>
          <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
        </svg>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <div class="flex justify-center text-gray-600">
    No Pod Leader have been added yet :(
  </div>
<% end %>

<%= tailwind_form_with(model: @caller, local: true) do |form| %>
  <%= form.section do %>
    <%= form.hidden_field :person_id, value: @caller.person.id %>
    <%= form.check_box :active, true, label: "Active", width: :full %>
    <%= form.text_area :experience, with: :full %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel '#' %>
    <%= form.submit %>
  <% end %>
<% end %>

<h1 class="flex justify-start text-2xl font-semibold text-gray-900">
  <div><%= @match.caller.name %></div>
  <div class="mx-2"><%= role_badge(@match.caller) %></div>
  <div class="ml-1 mr-3"> - </div>
  <div><%= @match.callee.name %></div>
  <div class="mx-2"><%= role_badge(@match.callee) %></div>
</h1>
<div class="flex flex-wrap">
  <div class="mt-2 sm:mt-2 mr-6 flex items-center text-sm text-gray-900">
    <% if @match.end_date.present? %>
      <div class="text-gray-500 mr-2">
        Matched between <%= @match.start_date %> and <%= @match.end_date %>
      </div>
    <% else %>
      <div class="text-gray-500 mr-2">
        Matched since <%= @match.start_date %>
      </div>
    <% end %>
  </div>
</div>
<div class="flex flex-wrap">
  <div class="mt-2 sm:mt-2 mr-6 flex items-center text-sm text-gray-900">
    <div class="text-gray-500 mr-2">Pod:</div>
    <% if @match&.pod %>
      <%= @match.pod.name %>
    <% else %>
      <span class="italic">N/A</span>
    <% end %>
  </div>
  <div class="mt-2 sm:mt-2 mr-6 flex items-center text-sm text-gray-900">
    <div class="text-gray-500 mr-2">Pod leader:</div>
    <% if @match&.pod&.pod_leader %>
      <%= @match.pod.pod_leader.name %>
    <% else %>
      <span class="italic">N/A</span>
    <% end %>
  </div>
</div>
<%= nav_tabs do |nav| %>
  <% nav.link "Call summaries", match_path(@match) %>
<% end %>

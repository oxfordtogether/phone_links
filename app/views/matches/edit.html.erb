<% content_for :breadcrumbs do %>
  <%= breadcrumbs do |list| %>
    <% list.link "Pods", pods_path %>
    <% list.link "Pod #{@match.caller.pod.name}", pod_path(@match.caller.pod) %>
    <% list.link "#{@match.caller.name} - #{@match.callee.name}", match_path(@match) %>
  <% end %>
<% end %>
<% content_for :page_head do %>
  <%= render(MatchHeadComponent.new(match: @match)) %>
<% end %>
<%= tailwind_form_with(model: @match, local: true) do |form| %>
  <%= form.section "" do %>
    <%= form.date_picker :start_date, width: :half %>
    <%= form.date_picker :end_date, width: :half %>
    <%= form.check_box :pending, true, "Provisional" %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel match_path(@match) %>
    <%= form.submit "Save" %>
  <% end %>
<% end %>

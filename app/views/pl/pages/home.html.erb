<% content_for :full_page do %>
  <div class="min-h-full flex flex-col items-stretch">
    <div class="bg-white shadow">
      <div class="px-4 sm:px-6 lg:max-w-6xl lg:mx-auto lg:px-8">
        <div class="py-6 md:flex md:items-center md:justify-between lg:border-t lg:border-gray-200">
          <div class="flex-1 min-w-0">
            <div class="flex items-center">
              <div class="sm:flex flex-1 sm:justify-between sm:items-center">
                <div class="flex items-center">
                  <%= icon("person-circle", class: "h-8 w-8 rounded-full sm:block text-gray-600") %>
                  <h1 class="ml-3 text-2xl font-bold leading-7 text-gray-900 sm:leading-9 sm:truncate">
                    Hi <%= @current_pod_leader&.name || "Unknown User" %>
                  </h1>
                </div>
                <% if @has_pod %>
                  <h2 class="mt-4 text-xl font-bold text-gray-500 sm:mr-1 sm:mt-0">
                    Pod <%= @current_pod_leader&.pod&.name || "?" %>
                  </h2>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% if !@has_pod %>
      <div class="mt-8">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-center">
            <div class="p-4 rounded shadow-md bg-white text-center">
              <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-headline">
                You aren't an active pod leader.
              </h3>
              <div class="mt-3">
                <p class="text-sm text-gray-500">
                  This is the pod leader's area but you aren't currently leading a pod.
                </p>
                <p class="mt-1 text-sm text-gray-500">
                  Contact <%= mail_to "support@oxfordcodelab.com" %> for help.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="flex flex-col flex-1">
        <div>
          <!-- TO DO: make this responsive -->
          <img class="" src="https://cdn-images-1.medium.com/max/2400/1*OqEGLMIIj1UC4bTTaz6bJw.png" alt="OxHub nicebackground">
        </div>
        <div class="flex-1 h-full mt-8">
          <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-center items-center">
              <h1 class="text-center mr-2 text-l md:text-2xl font-extrabold tracking-tight text-green-600">
                Welcome to Oxford Hub Phone Links
              </h1>
              <span>
                <%= icon("chat-alt-2", class: "h-6 w-6 md:h-8 md:w-8 rounded-full text-green-600") %>
              </span>
            </div>
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
              <h2 class="text-gray-800 text-xs font-medium uppercase tracking-wide">Pod <%= @current_pod_leader&.pod&.name || "?" %> summary</h2>
              <ul class="grid grid-cols-1 gap-3 sm:gap-6 sm:grid-cols-2 xl:grid-cols-3 mt-3">
                <li class="relative col-span-1 flex shadow-sm rounded-md">
                  <div class="flex-shrink-0 flex items-center justify-center w-12 bg-pink-600 text-white text-sm font-medium rounded-l-md"></div>
                  <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
                    <div class="flex-1 px-4 py-2 text-sm truncate">
                      <a href="#" class="text-gray-500 font-medium hover:text-gray-600">
                        Set up:
                        <div class="inline text-lg font-medium text-gray-900"><%= format_date_as_days_since(@pod.created_at) || "?"  %></div>
                      </a>
                    </div>
                  </div>
                </li>
                <li class="relative col-span-1 flex shadow-sm rounded-md">
                  <div class="flex-shrink-0 flex items-center justify-center w-12 bg-green-600 text-white text-sm font-medium rounded-l-md"></div>
                  <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
                    <div class="flex-1 px-4 py-2 text-sm truncate">
                      <a href="#" class="text-gray-500 font-medium hover:text-gray-600">
                        Matches:
                        <div class="inline text-lg font-medium text-gray-900"><%= @pod.matches.count || "?" %></div>
                      </a>
                    </div>
                  </div>
                </li>
                <li class="relative col-span-1 flex shadow-sm rounded-md">
                  <div class="flex-shrink-0 flex items-center justify-center w-12 bg-blue-600 text-white text-sm font-medium rounded-l-md"></div>
                  <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
                    <div class="flex-1 px-4 py-2 text-sm truncate">
                      <a href="#" class="text-gray-500 font-medium hover:text-gray-600">
                        Reports:
                        <div class="inline text-lg font-medium text-gray-900"><%= @pod.matches.map { |m| m.reports.count }.sum || "?" %></div>
                      </a>
                    </div>
                  </div>
                </li>
              </ul>
              <h2 class="text-center mt-8 mr-2 text-l md:text-2xl font-extrabold tracking-tight text-gray-700">
                Thank you!
              </h2>
            </div>
            <!-- to do: check responsive-ness -->
            <div class="mt-8">
              <h2 class="max-w-6xl mx-auto px-4 text-xs leading-6 font-medium uppercase tracking-wide text-gray-800 sm:px-6 lg:px-8">
                Action items
              </h2>
              <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex flex-col mt-2">
                  <% if @inbox_items.present? %>
                    <div class="align-middle min-w-full overflow-x-auto shadow overflow-hidden sm:rounded-lg">
                      <%= table @inbox_items, row_url: ->(e) { a_person_path(e.person) } do |tbl| %>
                        <% tbl.col "Task" do |item| %>
                          <span class="text-gray-900 font-medium"><%= item.person.name %>: </span>
                          <%= item.notes %>
                        <% end %>
                        <% tbl.col "Date" do |item| %>
                          <%= format_date_as_relative(item.occurred_at) %>
                        <% end %>
                      <% end %>
                    </div>
                  <% else %>
                    <div class="flex justify-center rounded-lg shadow p-4 bg-white">
                      <div class="text-sm text-gray-500">You have no action items</div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="mt-8">
              <h2 class="max-w-6xl mx-auto px-4 text-xs leading-6 font-medium uppercase tracking-wide text-gray-800 sm:px-6 lg:px-8">
                Useful links
              </h2>
              <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

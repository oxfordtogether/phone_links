<% content_for :breadcrumbs do %>
  <%= breadcrumbs home_path: pl_path(@current_pod_leader) do |list| %>
    <% list.link "Matches", pl_matches_path(@current_pod_leader) %>
    <% list.link "#{@match.caller.name} & #{@match.callee.name}", pl_match_path(@current_pod_leader, @match) %>
  <% end %>
<% end %>
<% content_for :page_head do %>
  <%= render partial: "show_page_head" %>
<% end %>
<div class="max-w-3xl mx-auto sm:px-6 lg:max-w-7xl ">
  <section aria-labelledby="timeline-title">
    <div class="bg-white px-4 py-5 shadow sm:rounded-lg sm:px-6">
      <div class="mt-2 flow-root">
        <% if @events.empty? %>
          <div class="flex justify-center">
            <div class="text-sm text-gray-500">No events recorded</div>
          </div>
        <% else %>
          <ul class="-mb-8">
            <% @events.each_with_index do |event, index| %>
              <% @event = event %>
              <% @last_event = @events.size - 1 == index %>
              <%= render partial: "pl/events" %>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </section>
</div>

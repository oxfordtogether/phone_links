<%= tailwind_form_with(model: @match, url: pl_match_path(@match), local: true) do |form| %>
  <%= form.section "" do %>
    <%= form.select :status, Match.status_options_for_select, include_blank: false, width: :half %>
    <%= form.text_area :status_change_notes %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel pl_match_path(@match) %>
    <%= form.submit "Save" %>
  <% end %>
<% end %>

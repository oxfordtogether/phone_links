<% content_for :page_head do %>
  <h1 class="text-2xl font-semibold text-gray-900">
    New provisional match
  </h1>
<% end %>
<%= tailwind_form_with(model: [:pl, @match], local: true) do |form| %>
  <%= form.section do %>
    <%= form.hidden_field :pod_id, value: @match.pod.id %>
    <%= form.collection_select :callee_id, @callees, :id, :name, label: "Callee", width: :half, required_asterix: true %>
    <%= form.collection_select :caller_id, @callers, :id, :name, label: "Caller", width: :half, required_asterix: true %>
    <%= form.text_area :status_change_notes, label: "Notes" %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel pl_matches_path(@current_pod_leader) %>
    <%= form.submit %>
  <% end %>
<% end %>

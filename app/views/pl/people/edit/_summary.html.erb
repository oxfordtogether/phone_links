<%= tailwind_form_with(
    model: [:pl, @person],
    url: pl_person_path(@person, params: { page: "summary" }),
    local: true) do |form| %>
  <%= form.section do %>
    <%= form.fields_for :callee do |callee_fields| %>
      <%= callee_fields.text_area :summary, label: "Summary notes", width: :full, info_message: "Visible to you and admins only" %>
    <% end %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel pl_person_path(@person) %>
    <%= form.submit %>
  <% end %>
<% end %>

<% content_for :page_head do %>
  <%= render partial: "pl/people/show_page_head" %>
<% end %>
<div class="grid grid-cols-4">
  <div>
    <%= render partial: "pl/people/menu" %>
  </div>
  <div class="col-span-3 col-start-2">
    <%= tailwind_form_with(
        model: [:pl, @person],
        url: save_check_ins_pl_edit_person_path(@person),
        method: :post,
        local: true) do |form| %>
      <%= form.section do %>
        <%= form.fields_for :caller do |caller_fields| %>
          <%= caller_fields.select :check_in_frequency, Caller.check_in_frequency_options_for_select, label: "Check-in frequency", width: :full, info_message: "Specify how often the caller would like a check-in" %>
        <% end %>
      <% end %>
      <%= form.button_section do %>
        <%= form.cancel pl_person_path(@person) %>
        <%= form.submit %>
      <% end %>
    <% end %>
  </div>
</div>

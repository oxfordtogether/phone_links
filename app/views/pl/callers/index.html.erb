<% content_for :breadcrumbs do %>
  <%= breadcrumbs do |list| %>
    <% list.link "Callers", pl_callers_path %>
  <% end %>
<% end %>
<% content_for :page_head do %>
  <%= render partial: "index_page_head" %>
<% end %>
<% if @callers.length > 0 %>
  <%= table @callers.sort_by(&:name), row_url: ->(c) { pl_caller_path(@current_pod_leader, c) } do |tbl| %>
    <% tbl.col "Name" do |caller| %>
      <%= link_to caller.name, a_person_path(caller.person) %>
    <% end %>
    <% tbl.col "Active" do |caller| %>
      <% if caller.active %>
        <%= icon("check-circle", class: "h-5 w-5 text-green-500") %>
      <% else %>
        <%= icon("cross", class: "h-5 w-5 text-red-500") %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <div class="flex justify-center text-gray-600">
    No Callers have been added yet :(
  </div>
<% end %>

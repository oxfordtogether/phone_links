<% content_for :page_head do %>
  <%= render partial: "pl/people/show_page_head" %>
<% end %>
<%= tailwind_form_with(
        model: [:pl, @caller],
        url: pl_caller_path(@caller),
        method: :patch,
        local: true) do |form| %>
  <%= form.section do %>
    <%= form.select :check_in_frequency, Caller.check_in_frequency_options_for_select, label: "Check-in frequency", width: :full %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel pl_person_path(@person) %>
    <%= form.submit %>
  <% end %>
<% end %>

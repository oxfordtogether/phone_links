<%= tailwind_form_with(model: @pod, local: true) do |form| %>
  <%= form.section do %>
    <%= form.text_field :name, width: :third %>
    <%= form.text_field :theme, width: :third %>
    <%= form.collection_select :pod_leader_id, PodLeader.all.sort_by(&:name), :id, :name, label: "Pod Leader", width: :third %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel pods_path %>
    <%= form.submit %>
  <% end %>
<% end %>

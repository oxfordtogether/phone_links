<% content_for :full_page do %>
  <div class="bg-white shadow">
    <div class="px-4 sm:px-6 lg:max-w-6xl lg:mx-auto lg:px-8">
      <div class="py-6 md:flex md:items-center md:justify-between lg:border-t lg:border-gray-200">
        <div class="flex-1 min-w-0">
          <!-- Profile -->
          <div class="flex items-center">
            <div>
              <div class="flex items-center">
                <%= icon("person-circle", class: "h-8 w-8 rounded-full sm:block text-gray-600") %>
                <h1 class="ml-3 text-2xl font-bold leading-7 text-gray-900 sm:leading-9 sm:truncate">
                  Hi <%= @current_user&.name || "Unknown User" %>
                </h1>
              </div>
            </div>
          </div>
        </div>
      </div>
      TO DO
    </div>
  </div>

  <div class="mt-8">
    <!-- Quick links - TO DO: improve responsive behavior -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-gray-800 text-xs font-medium uppercase tracking-wide">Quick links</h2>
      <ul class="flex flex-wrap mt-3">
        <li class="relative col-span-1 flex shadow-sm rounded-md mr-3 py-2">
          <%= button_link_to "New Reports", new_c_report_path %>
        </li>
      </ul>
    </div>

    <!-- Overview  -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mt-8 ">
    <div class="inline text-lg font-medium text-gray-900">Active caller since <%= format_date(@current_caller.created_at) %> (<%= caller_duration(format_datetime(@current_caller.created_at)) || "?" %>). Thank you!</div>
      <h2 class="text-gray-800 text-xs font-medium uppercase tracking-wide">Overview</h2>
      <ul class="grid grid-cols-1 gap-4 sm:gap-6 sm:grid-cols-2 xl:grid-cols-4 mt-3">
        <!-- start -->
        <li class="relative col-span-1 flex shadow-sm rounded-md">
          <div class="flex-shrink-0 flex items-center justify-center w-12 bg-pink-600 text-white text-sm font-medium rounded-l-md"></div>
          <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
            <div class="flex-1 px-4 py-2 text-sm truncate">
              <a href="#" class="text-gray-500 font-medium hover:text-gray-600">
                Number of reports:
                <div class="inline text-lg font-medium text-gray-900"><%= @reports.count || "no callee"  %></div>
              </a>
            </div>
          </div>
        </li>
        <li class="relative col-span-1 flex shadow-sm rounded-md">
          <div class="flex-shrink-0 flex items-center justify-center w-12 bg-green-600 text-white text-sm font-medium rounded-l-md"></div>
          <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md truncate">
            <div class="flex-1 px-4 py-2 text-sm truncate">
              <a href="#" class="text-gray-500 font-medium hover:text-gray-600">
                Number of callees:
                <div class="inline text-lg font-medium text-gray-900"><%= @matches.count %></div>
              </a>
            </div>
          </div>
        </li>
        <li class="relative col-span-1 flex shadow-sm rounded-md">
          <div class="flex-shrink-0 flex items-center justify-center w-12 bg-blue-600 text-white text-sm font-medium rounded-l-md"></div>
          <div class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md ">
            <div class="flex-1 px-4 py-2 text-sm truncate">
              <a href="#" class="text-gray-500 font-medium hover:text-gray-600">
                Active caller for:
                <div class="inline text-lg font-medium text-gray-900"><%= caller_duration("01/01/2020") || "?" %></div>
              </a>
            </div>
          </div>
        </li>
        <!-- end -->
      </ul>
    </div>
    <!-- Activity table (small breakpoint and up) -->
    <div class="hidden sm:block mt-8">
      <h2 class="max-w-6xl mx-auto px-4 text-xs leading-6 font-medium uppercase tracking-wide text-gray-800 sm:px-6 lg:px-8">
        Latest report
      </h2>
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <%= alert(title: 'Work in progress', info: 'This section is mocked up with fake data') %>
        <div class="flex flex-col mt-2">
          <div class="align-middle min-w-full overflow-x-auto shadow overflow-hidden sm:rounded-lg">
            <%= table @reports do |tbl| %>
              <% tbl.col "Callee" do |item| %>
                <%= format_date(item[:datetime]) %>
              <% end %>
              <% tbl.col "Date" do |item| %>
                <%= item[:datetime] %>
              <% end %>
              <% tbl.col "Callee State" do |item| %>
                <%= item[:callee_state] %>
              <% end %>
              <% tbl.col "Time" do |item| %>
                <%= item[:duration] %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flow-root">
    <ul class="-mb-8">
      <% @reports.sort_by(&:datetime).reverse[0..4].each_with_index do |report, index| %>
          <li>
            <div class="relative pb-8">
              <% if index == @reports.size - 1 %>
              <% else %>
                <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
              <% end %>
            <div class="relative flex space-x-3">
              <div>
                <% if report.callee_state == "Great!" %>
                  <span class="h-8 w-8 rounded-full bg-green-400 flex items-center justify-center">
                  <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-heart-eyes-fill" viewBox="0 0 16 16">
                    <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zM4.756 4.566c.763-1.424 4.02-.12.952 3.434-4.496-1.596-2.35-4.298-.952-3.434zm6.559 5.448a.5.5 0 0 1 .548.736A4.498 4.498 0 0 1 7.965 13a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .548-.736h.005l.017.005.067.015.252.055c.215.046.515.108.857.169.693.124 1.522.242 2.152.242.63 0 1.46-.118 2.152-.242a26.58 26.58 0 0 0 1.109-.224l.067-.015.017-.004.005-.002zm-.07-5.448c1.397-.864 3.543 1.838-.953 3.434-3.067-3.554.19-4.858.952-3.434z"/>
                  </svg>
                  </span>
                <% elsif report.callee_state == "Ok" %>
                  <span class="h-8 w-8 rounded-full bg-yellow-500 flex items-center justify-center">
                  <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-smile-fill" viewBox="0 0 16 16">
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zM4.285 9.567a.5.5 0 0 1 .683.183A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .183-.683zM10 8c-.552 0-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5S10.552 8 10 8z"/>
                  </svg>
                  </span>
                <% elsif report.callee_state == "Not great" %>
                  <span class="h-8 w-8 rounded-full bg-blue-800 flex items-center justify-center">
                    <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-frown-fill" viewBox="0 0 16 16">
                      <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm-2.715 5.933a.5.5 0 0 1-.183-.683A4.498 4.498 0 0 1 8 9.5a4.5 4.5 0 0 1 3.898 2.25.5.5 0 0 1-.866.5A3.498 3.498 0 0 0 8 10.5a3.498 3.498 0 0 0-3.032 1.75.5.5 0 0 1-.683.183zM10 8c-.552 0-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5S10.552 8 10 8z"/>
                    </svg>
                  </span>
                <% else %>
                  <span class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center ring-8 ring-white">
                    <div>Error</div>
                  </span>
                <% end %>
              </div>
              <div class="min-w-0 flex-1 flex justify-between space-x-4">
                  <% if report.duration == "did not answer" %>
                    <p class="text-sm text-gray-500"><%= report.match.caller.person.first_name %> called but <%= report.match.callee.person.first_name %> <a href="#" class="font-medium text-gray-900"><%= report.duration %></a></p>
                  <% else %>
                    <p class="text-sm text-gray-500"><%= report.match.caller.person.first_name %> called <%= report.match.callee.person.first_name %> for <a href="#" class="font-medium text-gray-900"><%= report.duration %></a> and created the report on  <%= format_date(report.created_at) %> </p>
                  <% end %>
                  <p> <a href="#" class="pl-2  text-gray-700"><%= report.summary %></a></p>
                <div class="text-right text-sm whitespace-nowrap text-gray-500"> <%= format_datetime(report.datetime) %> </div>
              </div>
            </div>
          </li>
      <% end %>
    </ul>
  </div>
  
<% end %>

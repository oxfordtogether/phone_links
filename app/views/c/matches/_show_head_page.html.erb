<div class="pb-8 sm:flex sm:justify-between">
  <div>
    <h1 class="text-2xl font-semibold text-gray-900">
      <%= @match.callee.name%>
    </h1>
    <div class="flex flex-wrap">
      <div class="mt-2 sm:mt-2 mr-6 flex items-center text-sm text-gray-900">
        <%= icon("telephone-fill", class: "flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400") %>
        <% if @match.callee.person.phone.present? %>
          <%= @match.callee.person.phone %>
        <% else %>
          <span class="italic">unknown</span>
        <% end %>
      </div>
      <div class="mt-2 sm:mt-2 mr-6 flex items-center text-sm text-gray-900">
        <%= icon("house-fill", class: "flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400") %>
        <% if address_to_string(@match.callee.person).present? %>
          <%= address_to_string(@match.callee.person) %>
        <% else %>
          <span class="italic">unknown</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mt-4 sm:my-0">
    <%= button_link_to "New report", new_c_report_path(@current_caller, { match_id: @match.id }), icon: "icon-add" %>
  </div>
</div>

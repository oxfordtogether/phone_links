<%= tailwind_form_with(model: [:c, @report], local: true) do |form| %>

  <%= form.section do %>
    
    <%= form.collection_select "Who did you call?", @matches, :id, :callee_name, include_blank: false, width: :half, required_asterix: true, info_message: "Please select your callee for this report" %>
    <%= form.date_picker :date_of_call, label: "Date of the call", width: :third, required_asterix: true %>
    <%= form.select :duration, Report.durations, label: "Length of the call", width: :third, required_asterix: true %>
    <%= form.select :callee_state, ["Great!","Ok","Not great"], label: "How was the call?", width: :half, required_asterix: true %>    
    <%= form.text_area :summary, width: :full, required_asterix: true, info_message: "Give as many details as you wish, there is no word limit." %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel @redirect_on_cancel %>
    <%= form.submit label = "Submit report" %>
  <% end %>
<% end %>

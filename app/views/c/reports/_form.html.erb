<%= tailwind_form_with(model: [:c, @report], local: true) do |form| %>

  <%= form.section do %>
    
    <%= form.collection_select :match_id, Match.all, :id, :names, width: :half, required_asterix: true, info_message: "Please select your callee for this report" %>
    <%= form.select :callee_state, ["Great!","Ok","Not great"], label: "How was the call?", width: :half, required_asterix: true %>
    <%= form.date_picker :datetime, label: "Call date", width: :third %>
    <%= form.time_select :datetime, label: "& time", width: :half, required_asterix: true, info_message: "" %>
    <%= form.select :duration, ["less than 15 minutes","15 to 30 minutes","30 minutes to 1 hour","Over one hour","Did not answer"], label: "Call duration", width: :third, required_asterix: true %>
    <%= form.text_area :summary, width: :full, required_asterix: true, info_message: "Give as many details as you wish, there is no word limit." %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel @redirect_on_cancel %>
    <%= form.submit label = "Submit report" %>
  <% end %>
<% end %>

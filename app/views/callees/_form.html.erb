<%= tailwind_form_with(model: @callee, local: true) do |form| %>
  <%= form.section do %>
    <%= form.hidden_field :person_id, value: @callee.person.id %>
    <%= form.text_area :reason_for_referral, width: :full %>
    <%= form.text_area :living_arrangements, width: :full %>
    <%= form.text_area :other_information, width: :full %>
    <%= form.text_area :additional_needs, width: :full %>
    <%= form.check_box :active, true, label: "Active", width: :third %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel @redirect_on_cancel %>
    <%= form.submit %>
  <% end %>
<% end %>

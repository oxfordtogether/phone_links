<%= tailwind_form_with(model: @person, local: true) do |form| %>
  <%= form.section do %>
    <%= form.text_field :title, width: :third %>
    <%= form.text_field :first_name, width: :third %>
    <%= form.text_field :last_name, width: :third %>
    <%= form.text_field :phone, width: :half %>
    <%= form.text_field :email, width: :half %>
  <% end %>
  <%= form.button_section do %>
    <%= form.cancel '/waitlist' %>
    <%= form.submit %>
  <% end %>
<% end %>

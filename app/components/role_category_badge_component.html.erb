<% case role.role_description %>
<% when :caller %>
<span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium text-gray-800 bg-green-100">
  <%= "Caller" %>
</span>
<% when :callee %>
<span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium text-gray-800 bg-blue-100">
  <%= "Callee" %>
</span>
<% when :pod_leader %>
<span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium text-gray-800 bg-yellow-100">
  <%= "Pod leader" %>
</span>
<% when :admin %>
<span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium text-gray-800 bg-purple-100">
  <%= "Admin" %>
</span>
<% end%>

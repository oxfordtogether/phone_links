<div class="sm:flex sm:justify-between">
  <h1 class="flex justify-start flex-wrap text-2xl font-semibold text-gray-900">
    Pod: <%= @pod.name %>
  </h1>
  <div class="mt-4 sm:mt-0">
    <%= button_link_to "Edit", edit_a_pod_path(@pod), icon: 'heroicon-edit' %>
  </div>
</div>
<div class="flex flex-wrap">
  <div class="mt-2 sm:mt-2 mr-6 flex items-center text-base text-gray-900">
    <div class="mr-1.5 text-gray-600">Pod leader: </div>
    <% if @pod.pod_leader.present? %>
      <%= link_to @pod.pod_leader.name, a_person_path(@pod.pod_leader.person) %>
    <% else %>
      <span class="text-sm italic">No-one assigned</span>
    <% end %>
  </div>
  <div class="mt-2 sm:mt-2 mr-6 flex items-center text-base text-gray-900">
    <div class="mr-1.5 text-gray-600">Theme: </div>
    <% if @pod.theme.present? %>
      <%= @pod.theme %>
    <% else %>
      <span class="italic">unknown</span>
    <% end %>
  </div>
  <div class="mt-2 sm:mt-2 mr-6 flex items-center text-base text-gray-900">
    <div class="mr-1.5 text-gray-600">Safeguarding lead: </div>
    <% if @pod.safeguarding_lead.present? %>
      <%= @pod.safeguarding_lead.name %>
    <% else %>
      <span class="italic">unknown</span>
    <% end %>
  </div>
</div>
<%= nav_tabs do |nav| %>
  <% nav.link "Matches", matches_a_pod_path(@pod) %>
  <% nav.link "Callers", callers_a_pod_path(@pod) %>
  <% nav.link "Callees", callees_a_pod_path(@pod) %>
  <% nav.link "Details", edit_a_pod_path(@pod) %>
<% end %>

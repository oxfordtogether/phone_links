<%= link_to @url, class: current_page?(@url) ? "bg-gray-900 text-white group flex items-center px-2 py-2 text-base font-medium rounded-md" : "text-gray-300 hover:bg-gray-700 hover:text-white group flex items-center px-2 py-2 text-base font-medium rounded-md" do %>
  <% if @icon %>
    <%= icon(@icon, class: current_page?(@url) ? 'text-gray-300 mr-4 h-6 w-6' : 'text-gray-400 group-hover:text-gray-300 mr-4 h-6 w-6') %>
  <% end %>
  <%= @name %>
<% end %>

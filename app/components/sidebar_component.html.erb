<!-- Off-canvas menu for mobile -->
<div data-sidebar-target="mobileSidebar" class="hidden">
  <div class="fixed inset-0 flex z-40">
    <!--
        Off-canvas menu overlay, show/hide based on off-canvas menu state.

        Entering: "transition-opacity ease-linear duration-300"
          From: "opacity-0"
          To: "opacity-100"
        Leaving: "transition-opacity ease-linear duration-300"
          From: "opacity-100"
          To: "opacity-0"
      -->
    <div class="fixed inset-0">
      <div class="absolute inset-0 bg-gray-600 opacity-75"></div>
    </div>
    <!--
        Off-canvas menu, show/hide based on off-canvas menu state.

        Entering: "transition ease-in-out duration-300 transform"
          From: "-translate-x-full"
          To: "translate-x-0"
        Leaving: "transition ease-in-out duration-300 transform"
          From: "translate-x-0"
          To: "-translate-x-full"
      -->
    <div class="relative flex-1 flex flex-col max-w-xs w-full bg-gray-800">
      <div class="absolute top-0 right-0 -mr-12 pt-2">
        <button data-action="click->sidebar#close" class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
          <span class="sr-only">Close sidebar</span>
          <!-- Heroicon name: x -->
          <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex-1 flex flex-col h-0 pt-5 pb-4 overflow-y-auto">
        <div class="flex-shrink-0 flex items-center px-4">
          <!-- <img class="h-8 w-auto" src="/oxford_hub_logo.jpg" alt="Phone Links"> -->
          <svg class="text-white" xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-link-45deg" viewBox="0 0 16 16">
            <path d="M4.715 6.542L3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1.001 1.001 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4.018 4.018 0 0 1-.128-1.287z"/>
            <path d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 0 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 0 0-4.243-4.243L6.586 4.672z"/>
          </svg>
          <div>
            <div class="ml-2 text-white">Phone Links</div>
            <!-- <div class="ml-2 text-sm text-gray-400">Oxford Hub</div> -->
          </div>
        </div>
        <nav class="mt-5 px-2 flex-1 space-y-1">
          <%= navbar_content %>
        </nav>
        <%= link_to logout_path, data: { turbolinks: false }, class: "ml-3 text-gray-300 hover:text-white items-center px-2 py-2 text-base font-medium" do %>
          Logout
        <% end %>
      </div>
      <div class="flex-shrink-0 flex bg-gray-700 p-4">
        <div class="ml-3">
          <p class="text-sm font-normal text-gray-200">
            Created by Oxford Code Lab
          </p>
        </div>
      </div>
    </div>
    <div class="flex-shrink-0 w-14">
      <!-- Force sidebar to shrink to fit close icon -->
    </div>
  </div>
</div>
